<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/city_fragment_statistics_block_textstat_lay_pomo_block"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_stat_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:text="10"
        android:hint="0" />

    <TextView
        android:id="@+id/text_stat_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_stat_item_number"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/transoarent20_black"
        android:hint="name"
        android:text="pomo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_stat_item_verb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_stat_item_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/transoarent10_black"
        android:layout_marginTop="3dp"
        android:text="выполнено" />
</RelativeLayout>