<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/imageView"/>
    <TextView
            android:text="13:32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer_notification_time"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/timer_notification_title"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginTop="9dp" android:layout_below="@+id/timer_notification_title"/>
    <TextView
            android:text="Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:id="@+id/timer_notification_title"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/imageView"/>
</RelativeLayout>