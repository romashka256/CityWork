<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="У вас в городе"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/city_fragment_city_people_count"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/city_fragment_city_people_count"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="1 350 человек"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/city_fragment_settings" />

    <ImageView
        android:id="@+id/city_fragment_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setting_icon" />

    <ImageView
        android:id="@+id/city_fragment_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/city_fragment_settings"
        app:layout_constraintEnd_toStartOf="@+id/city_fragment_settings"
        app:layout_constraintTop_toTopOf="@+id/city_fragment_settings"
        app:srcCompat="@drawable/share_icon" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/city_fragment_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_fragment_city_people_count" />

    <View
        android:id="@+id/city_fragment_land"
        android:layout_width="0dp"
        android:layout_height="@dimen/city_land_raw"
        android:background="@drawable/city_land_raw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_fragment_rv" />
</android.support.constraint.ConstraintLayout>